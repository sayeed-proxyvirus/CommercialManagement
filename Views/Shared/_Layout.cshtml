    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-wrap: nowrap;
        }

        /* Sidebar styling */
        .sidebar {
            width: 350px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            transition: transform 0.3s ease-in-out;
        }

        .sidebar .nav-link {
            color: #ccc;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
            color: white;
        }

        /* Hide sidebar on small screens */
        @@media (max-width: 991.98px) {
            .sidebar {
                position: fixed;
                height: 100%;
                transform: translateX(-100%);
                z-index: 1050;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                display: none;
                z-index: 1040;
            }

            .overlay.active {
                display: block;
            }
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            width: 75%;
        }

        .topbar {
            background-color: #f8f9fa;
            padding: 0.5rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .menu-toggle {
            border: none;
            background: none;
            font-size: 1.5rem;
            color: #343a40;
            display: none;
        }

        @@media (max-width: 991.98px) {
            .menu-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
